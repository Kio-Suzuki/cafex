generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // descomente a linha abaixo para usar a conexao direta com o banco de dados, permitindo o uso de migrations
//  url      = env("DIRECT_URL")
}

enum StatusPresenca {
  PRESENTE
  AUSENTE
  JUSTIFICADO
}

model Oficina {
  id           String     @id @default(cuid())
  nome         String
  descricao    String?
  dataHorario  DateTime
  responsaveis String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  presencas    Presenca[]
}

model Aluno {
  ra        String     @id @default(cuid())
  nome      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  presencas Presenca[]
}

model Presenca {
  id           String         @id @default(cuid())
  dataPresenca DateTime
  status       StatusPresenca
  observacoes  String?

  alunoId String
  aluno   Aluno  @relation(fields: [alunoId], references: [ra], onDelete: Cascade)

  oficinaId String
  oficina   Oficina @relation(fields: [oficinaId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([alunoId, oficinaId, dataPresenca])
  @@index([alunoId])
  @@index([oficinaId])
}
