generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = env("DIRECT_URL")
}

enum StatusPresenca {
  PRESENTE
  AUSENTE
  JUSTIFICADO
}

model Oficina {
  id           Int           @id @default(autoincrement())
  nome         String
  descricao    String?
  horarioInicio DateTime
  horarioFim   DateTime
  responsaveis Responsavel[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  presencas    Presenca[]
}

model Responsavel {
  id                   Int       @id @default(autoincrement())
  nomeResponsavel      String
  registroResponsavel  String    @unique
  senha                String
  oficinas             Oficina[]
}

model Aluno {
  ra        String     @id
  nome      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  presencas Presenca[]
}

model Presenca {
  id           Int            @id @default(autoincrement())
  dataPresenca DateTime
  status       StatusPresenca
  observacoes  String?

  alunoId String
  aluno   Aluno  @relation(fields: [alunoId], references: [ra], onDelete: Cascade)

  oficinaId Int
  oficina   Oficina @relation(fields: [oficinaId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([alunoId, oficinaId, dataPresenca])
  @@index([alunoId])
  @@index([oficinaId])
}
