generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider    = "postgresql"
  url         = env("DATABASE_URL")
  directUrl   = env("DIRECT_URL")
}

enum StatusPresenca {
  PRESENTE
  AUSENTE
  JUSTIFICADO
}

model Oficina {
  id            Int           @id @default(autoincrement())
  nome          String
  descricao     String?
  horarioInicio DateTime
  horarioFim    DateTime
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  presencas     Presenca[]
}

model Aluno {
  ra        Int        @id
  nome      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  presencas Presenca[]
}

model Presenca {
  id           Int            @id @default(autoincrement())
  dataPresenca DateTime
  status       StatusPresenca
  observacoes  String?

  alunoRa Int
  aluno   Aluno @relation(fields: [alunoRa], references: [ra], onDelete: Cascade)

  oficinaId Int
  oficina   Oficina @relation(fields: [oficinaId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([alunoRa, oficinaId, dataPresenca])
  @@index([alunoRa])
  @@index([oficinaId])
}
